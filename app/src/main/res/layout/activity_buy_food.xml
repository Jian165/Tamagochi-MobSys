<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyFood">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_pawprint"
        android:elevation="11dp"
        android:layout_alignTop="@+id/cardViewBuyfood"
        android:layout_marginTop="-40dp"
        android:layout_centerHorizontal="true"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewBuyfood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        app:cardElevation="10dp"
        android:elevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_line_stroke"
            >
            <ImageView
                android:id="@+id/imgfoodOrderImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/food_sushi"
                android:padding="10dp"
                android:background="@drawable/bg_white_round_rec"
                />
            <TextView
                android:id="@+id/lblFoodOrderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgfoodOrderImage"
                android:layout_centerHorizontal="true"
                android:text="Sushi"
                android:textSize="32dp"
                android:fontFamily="@font/chewy_regular"
                android:textColor="@color/black_D0D"
                android:layout_marginTop="4dp"
                android:letterSpacing="0.05"
                />
            <GridLayout
                android:id="@+id/glPricing"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/lblFoodOrderName"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:rowCount="4"
                android:columnCount="2"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center_horizontal"
                    >
                        <ImageView
                            android:id="@+id/heartIconBuy"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_heart"
                            />
                        <TextView
                            android:id="@+id/lblFoodBuyHealthStat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+10"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:layout_toEndOf="@+id/heartIconBuy"
                            android:layout_alignBottom="@+id/heartIconBuy"
                            android:fontFamily="@font/chewy_regular"
                            android:layout_marginBottom="-4dp"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/black_D0D"
                            />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:gravity="center_horizontal"
                    >
                    <ImageView
                        android:id="@+id/happyIconBuy"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_happy"
                        />
                    <TextView
                        android:id="@+id/lblFoodBuyHappyStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+10"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_toEndOf="@+id/happyIconBuy"
                        android:layout_alignBottom="@+id/happyIconBuy"
                        android:fontFamily="@font/chewy_regular"
                        android:layout_marginBottom="-4dp"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black_D0D"
                        />

                </RelativeLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Current money:"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/chewy_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black_D0D"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    />
                <TextView
                    android:id="@+id/lblOrderCurrentMoney"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="$10"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textDirection="rtl"
                    android:fontFamily="@font/chewy_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black_D0D"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Item Pirce:"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/chewy_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black_D0D"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    />
                <TextView
                    android:id="@+id/lblFoodOrderPice"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="$10"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textDirection="rtl"
                    android:fontFamily="@font/chewy_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black_D0D"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Quantity:"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/chewy_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black_D0D"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    />
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    >
                    <EditText
                        android:id="@+id/txtOrderQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:background="@drawable/bg_white_round_rec2"
                        android:fontFamily="@font/chewy_regular"
                        android:letterSpacing="0.05"
                        android:textColor="@color/black_D0D"
                        android:layout_marginTop="12dp"
                        android:maxLength="4"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        />
                </RelativeLayout>
            </GridLayout>
            <View
                android:id="@+id/vPircingLine"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/black_D0D"
                android:layout_below="@id/glPricing"
                android:layout_alignLeft="@id/glPricing"
                android:layout_alignRight="@id/glPricing"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vPircingLine"
                android:layout_alignLeft="@id/vPircingLine"
                android:layout_alignRight="@id/vPircingLine"
                android:layout_marginRight="4dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Total Price:"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/chewy_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black_D0D"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/lblTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="$0"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/chewy_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black_D0D"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:layout_alignLeft="@id/glPricing"
                android:layout_alignRight="@id/glPricing"
                android:background="@drawable/bg_gradient_round_rec"
                android:textColor="@color/black_D0D"
                android:text="Pay"
                android:textSize="20dp"
                android:letterSpacing="0.1"
                android:fontFamily="@font/chewy_regular"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/whitedots"
                android:layout_alignTop="@id/btnPay"
                android:layout_alignLeft="@+id/btnPay"
                android:elevation="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="1dp"
                />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>