<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_080"
    tools:context=".Profile">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_pawprint"
        android:elevation="11dp"
        android:layout_alignTop="@+id/cardViewBuyfood"
        android:layout_marginTop="-40dp"
        android:layout_centerHorizontal="true"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewBuyfood"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="100dp"
        app:cardElevation="10dp"
        android:elevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_line_stroke"
            >
            <ImageView
                android:id="@+id/imgProfileCharacter"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/idle_1"
                android:padding="10dp"
                android:background="@drawable/bg_white_round_rec"
                />
            <TextView
                android:id="@+id/lblProfilePetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgProfileCharacter"
                android:layout_centerHorizontal="true"
                android:text="Sushi"
                android:textSize="32dp"
                android:fontFamily="@font/chewy_regular"
                android:textColor="@color/black_D0D"
                android:layout_marginTop="4dp"
                android:letterSpacing="0.05"
                />
            <GridLayout
                android:id="@+id/glProfile"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/lblProfilePetName"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:rowCount="2"
                android:columnCount="2"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Current money:"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/chewy_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black_D0D"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    />
                <TextView
                    android:id="@+id/lblProfileCurrentMoney"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="$0"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/chewy_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black_D0D"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Parent Name:"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/chewy_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black_D0D"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    />
                <TextView
                    android:id="@+id/lblProfileParentName"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="Name"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textDirection="rtl"
                    android:fontFamily="@font/chewy_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black_D0D"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    />
            </GridLayout>
            <View
                android:id="@+id/vPircingLine"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/black_D0D"
                android:layout_below="@id/glProfile"
                android:layout_alignLeft="@id/glProfile"
                android:layout_alignRight="@id/glProfile"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:layout_alignLeft="@id/glProfile"
                android:layout_alignRight="@id/glProfile"
                android:background="@drawable/bg_gradient_round_rec"
                android:textColor="@color/black_D0D"
                android:text="logout"
                android:textSize="20dp"
                android:letterSpacing="0.1"
                android:fontFamily="@font/chewy_regular"
                />
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/whitedots"
                android:layout_alignTop="@id/btnLogout"
                android:layout_alignLeft="@+id/btnLogout"
                android:elevation="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="1dp"
                />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>