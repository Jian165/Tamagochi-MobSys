<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:elevation="10dp"
        app:cardCornerRadius="12dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient_round_rec_4"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            >
            <ImageView
                android:id="@+id/itemContainer"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bg_white_round_rec"
                />
            <View
                android:id="@+id/v_foodLine"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/blue_080"
                android:layout_toEndOf="@+id/itemContainer"
                android:layout_marginLeft="4dp"
                android:layout_alignTop="@+id/itemContainer"
                android:layout_alignBottom="@+id/itemContainer"
                android:alpha="0.5"
                />

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/itemContainer"
                android:layout_alignBottom="@+id/itemContainer"
                android:layout_alignLeft="@+id/itemContainer"
                android:layout_alignRight="@+id/itemContainer"
                android:scaleType="fitCenter"
                android:layout_margin="8dp"
                android:src="@drawable/food_sushi"
                />

            <TextView
                android:id="@+id/lblFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sushi"
                android:textSize="24dp"
                android:textColor="@color/black_D0D"
                android:fontFamily="@font/chewy_regular"
                android:textStyle="bold"
                android:layout_toStartOf="@+id/btnBuy"
                android:layout_toEndOf="@+id/v_foodLine"
                android:layout_above="@+id/btnBuy"
                android:singleLine="true"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:letterSpacing="0.05"
                android:layout_alignTop="@+id/v_foodLine"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBuy"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_blue_solid_round_rec"
                android:textColor="@color/white"
                android:text="Buy"
                android:fontFamily="@font/chewy_regular"
                android:letterSpacing="0.05"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/itemContainer"
                android:layout_marginRight="12dp"
                />

            <ImageView
                android:id="@+id/heartIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_heart"
                android:layout_below="@+id/lblFoodName"
                android:layout_alignLeft="@id/lblFoodName"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:id="@+id/healthStatsLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10"
                android:textSize="16dp"
                android:textColor="@color/black_D0D"
                android:fontFamily="@font/chewy_regular"
                android:layout_toEndOf="@id/heartIcon"
                android:layout_alignTop="@id/heartIcon"
                android:layout_alignBottom="@id/heartIcon"
                android:layout_marginLeft="4dp"
                />

            <ImageView
                android:id="@+id/happyIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_happy"
                android:layout_alignTop="@id/heartIcon"
                android:layout_toEndOf="@+id/healthStatsLbl"
                android:layout_marginLeft="12dp"
                />

            <TextView
                android:id="@+id/happyStatsLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+10"
                android:textSize="16dp"
                android:textColor="@color/black_D0D"
                android:fontFamily="@font/chewy_regular"
                android:layout_toEndOf="@id/happyIcon"
                android:layout_alignTop="@id/heartIcon"
                android:layout_alignBottom="@id/happyIcon"
                android:layout_marginLeft="4dp"
                />

            <TextView
                android:id="@+id/lblPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$40"
                android:textSize="24dp"
                android:fontFamily="@font/chewy_regular"
                android:textColor="@color/black_D0D"
                android:letterSpacing="0.05"
                android:background="@drawable/bg_blue_round_rec"
                android:gravity="center"
                android:layout_above="@+id/btnBuy"
                android:layout_alignLeft="@id/btnBuy"
                android:layout_alignRight="@id/btnBuy"
                android:layout_marginBottom="4dp"
                android:layout_alignTop="@+id/lblFoodName"
                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>